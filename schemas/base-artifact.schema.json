{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://task-assistant.dev/schemas/base-artifact.schema.json",
  "type": "object",
  "required": [
    "schema_version",
    "artifact_type",
    "correlation_id",
    "engine_id",
    "created_at",
    "inputs_hash",
    "artifact_hash"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "artifact_type": {
      "type": "string"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid"
    },
    "engine_id": {
      "type": "string",
      "enum": [
        "CONFIG",
        "GATE",
        "POLICY",
        "ORCH",
        "TELEM",
        "RECOVERY",
        "INTAKE",
        "CONTEXT",
        "PLAN",
        "MODIFY",
        "TEST",
        "EVAL",
        "DELIVER"
      ]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "inputs_hash": {
      "type": "string",
      "minLength": 32
    },
    "artifact_hash": {
      "type": "string",
      "minLength": 32
    }
  },
  "additionalProperties": true
}
